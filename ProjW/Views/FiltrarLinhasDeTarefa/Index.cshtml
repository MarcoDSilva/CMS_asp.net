@model IEnumerable<ProjW.Models.LinhaDeTarefa>

@{
    ViewBag.Title = "Index";
}

<h2>Pesquisar as linhas de tarefa</h2>

<table>
    @using (Html.BeginForm())
    {
        <tr>
            <td>Selecione o número da tarefa realizada: </td>
            <td>@Html.TextBox("busca")</td>
            <td><input type="submit" name="name" value="clica" /></td>
            <td>Pesquisaste: @ViewBag.pesquisa</td>
        </tr>
    }
</table>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Tarefa.Titulo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DataDaLinha)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Descritivo)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Tarefa.Titulo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DataDaLinha)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Descritivo)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
